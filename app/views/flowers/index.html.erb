<div class="container">
  <h1 style="text-align:center">Flowers</h1>
  <div class="row">
    <% @flowers.each do |flower| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <%= image_tag flower.photo_url , class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= flower.name %></h5>
            <p class="card-text"><%= flower.category.name %></p>
            <%= link_to "More details", flower_path(flower), class: "btn btn-primary" %>
           <p>Amount: <%= humanized_money_with_symbol(flower.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
